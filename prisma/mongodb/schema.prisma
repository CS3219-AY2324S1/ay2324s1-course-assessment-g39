// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../../node_modules/@prisma-db-mongo/client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

model Question {
    id           String        @id @default(cuid()) @map("_id")
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
    title        String        @unique
    body         String
    difficulty   Int
    category     String
    environments Environment[]
}

model Environment {
    id        String   @id @default(cuid()) @map("_id")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    languageId Int      // from Judge0
    Question   Question @relation(fields: [questionId], references: [id])
    questionId String

    template    String
    prepend     String?
    append      String?
    testCases   TestCase[]
    answers     Answer[]

    @@unique([languageId, questionId])
}

model TestCase {
    id        String   @id @default(cuid()) @map("_id")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    Environment Environment @relation(fields: [environmentId], references: [id])
    environmentId String

    description String
    hint        String?

    test        String
    input       String?
    output      String?
    timeLimit   Float?  // in seconds
    memoryLimit Float?  // in kilobytes
}

model Answer {
    id        String   @id @default(cuid()) @map("_id")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    body      String
    environment  Environment @relation(fields: [envId], references: [id])
    envId String

}