generator client {
    provider = "prisma-client-js"
    output = "../../node_modules/@prisma-db-mongo/client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

model Question {
    id        String   @id @default(cuid()) @map("_id")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title     String
    body      String
    difficulty Int
    category  String
    // answers   Answer[]
}

